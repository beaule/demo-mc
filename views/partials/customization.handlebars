<!-- customization modal-->
<!-- customization Modal 1-->
<div class="portfolio-modal modal fade" id="portfolioModal1" tabindex="-1" role="dialog"
  aria-labelledby="portfolioModal1Label" aria-hidden="true">
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <button class="close" type="button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true"><i class="fas fa-times"></i></span>
      </button>
      <div class="modal-body text-center">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <!-- customization Modal - Title-->
              <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0" id="portfolioModal1Label">Mon niveau d'activité physique (NPA) {{year}}
              </h2>
              <!-- Icon Divider-->
              <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
              </div>
            <div class="row justify-content-center">
                {{#if sportProfileIsLow}}
                <div class="col-lg-4">
                  <img src="assets/img/3rd-place.png" width="100px" />
                  <h4>Peu actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/2nd-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/1st-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Tres actif</h4>
                </div>
                {{/if}}
                {{#if sportProfileIsMedium}}
                <div class="col-lg-4">
                  <img src="assets/img/3rd-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Peu actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/2nd-place.png" width="100px" />
                  <h4>Actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/1st-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Tres actif</h4>
                </div>
                {{/if}}
                {{#if sportProfileIsHigh}}
                <div class="col-lg-4">
                  <img src="assets/img/3rd-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Peu actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/2nd-place-disabled.png" width="100px" />
                  <h4 style="color:grey">Actif</h4>
                </div>
                <div class="col-lg-4">
                  <img src="assets/img/1st-place.png" width="100px" />
                  <h4>Tres actif</h4>
                </div>
                {{/if}}
              </div>
              <br/><br/>
              <figure class="highcharts-figure" style="margin-top:-100px">
                <div id="chartdiv"></div>
              </figure>
  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- customization Modal 2-->
