            <select class="form-control" id="exampleFormControlSelect1">
                  <option>Semaine 34</option>
                  <option>Semaine 30</option>
                  <option>Semaine 30</option>
                  <option>Semaine 30</option>
                  <option>Semaine 30</option>
                </select>
                <h3>Distance: {{weeklyResults.32.physicalActivity.0.amount.0.byDistance}} mètres</h3>
                <h3>Durée: {{weeklyResults.32.physicalActivity.0.amount.0.byHour}} heures</h3>
                <h3>Sorties: {{weeklyResults.32.physicalActivity.0.amount.0.byRepetition}}</h3>
                <div id="chartdivweek"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>